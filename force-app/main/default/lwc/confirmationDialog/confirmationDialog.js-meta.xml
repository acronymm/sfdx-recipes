<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>
    <description>Custom Confirmation Dialog with custom response event</description>
    <masterLabel>Confirmation Dialog</masterLabel>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="isFlow" type="Boolean" label="isFlow"/>
            <property name="visible" type="Boolean" label="visible"/>
            <property name="showTitle" type="Boolean" label="showTitle"/>
            <property name="title" type="String" label="title"/>
            <property name="message" type="String" label="message"/>
            <property name="confirmLabel" type="String" label="confirmLabel"/>
            <property name="cancelLabel" type="String" label="cancelLabel"/>
            <property name="response" type="String" label="response" role="outputOnly"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
